@using custom_identity.Models.Partials

@model ProfilePartialModel

@{
    ViewData["Title"] = "Profile";
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
<div class="row">
    <div class="col-lg-7">
        <form id="profile-form" class="user" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group">
                <input asp-for="Username"
                       class="form-control form-control-user"
                       placeholder="Please choose your username."
                       disabled />
            </div>
            <div class="form-group">
                <input asp-for="PhoneNumber"
                       class="form-control form-control-user"
                       placeholder="Please enter your phone number." />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary btn-user btn-block">Save</button>
        </form>
    </div>
</div>
