@{
    ViewData["Title"] = "Personal Data";
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-lg-7">
        <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <p>
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
        <div class="row">
            <div class="col-md-3">
                <form id="download-data" asp-controller="auth" asp-action="downloadpersonaldata" method="post">
                    <button class="btn btn-primary btn-user btn-block" type="submit">Download</button>
                </form>
            </div>
            <div class="col-md-3">
                <p>
                    <a id="delete" asp-controller="auth" asp-action="deletepersonaldata" class="btn btn-danger btn-user btn-block">Delete</a>
                </p>
            </div>
        </div>
    </div>
</div>