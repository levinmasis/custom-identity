@using custom_identity.Models.Partials

@model EmailPartialModel
@{
    ViewData["Title"] = "Email";
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
<div class="row">
    <div class="col-lg-7">
        <form id="email-form" class="user" method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
            @if (Model.IsEmailConfirmed)
            {
                <div class="form-group input-group">
                    <input asp-for="Email" class="form-control form-control-user" placeholder="Please enter your email." disabled />
                    <div class="input-group-append">
                        <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
                    </div>
                </div>
            }
            else
            {
                <div class="form-group">
                    <input asp-for="Email" class="form-control form-control-user" placeholder="Please enter your email." disabled />
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                </div>
            }
            <div class="form-group">
                <input asp-for="NewEmail" class="form-control form-control-user" autocomplete="email" aria-required="true" placeholder="Please enter new email." />
                <span asp-validation-for="NewEmail" class="text-danger"></span>
            </div>
            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-primary btn-user btn-block">Change email</button>
        </form>
    </div>
</div>
